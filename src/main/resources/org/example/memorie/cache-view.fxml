<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<?import javafx.scene.control.Button?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.memorie.CacheController">
    <center>
    <VBox spacing="10" alignment="CENTER"> <Label text="Simulare memorie cache" style="-fx-font-size: 20px;"/>

        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="addressField" promptText="Introduceți adresa..."/>
            <Button text="Citește din adresă" fx:id="readButton" onAction="#onRead"/>
        </HBox>
        <TextArea fx:id="outputArea" prefRowCount="5" prefColumnCount="40"/>
        <TableView fx:id="cacheTable" prefHeight="200" prefWidth="400">
            <columns>
                <TableColumn fx:id="indexColumn" text="Index" prefWidth="80"/>
                <TableColumn fx:id="validColumn" text="Valid" prefWidth="80"/>
                <TableColumn fx:id="tagColumn" text="Tag" prefWidth="80"/>
                <TableColumn fx:id="dataColumn" text="Data" prefWidth="120"/>
            </columns>
        </TableView>

    </VBox>
    </center>
</BorderPane>